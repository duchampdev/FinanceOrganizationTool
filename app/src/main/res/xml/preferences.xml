<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
            android:key="@string/pref_key_categoryorder"
            android:title="@string/settings_catorder_title"
            android:summaryOn="@string/settings_catorder_summary_on"
            android:summaryOff="@string/settings_catorder_summary_off"
            android:defaultValue="false" />

    <SwitchPreference
        android:key="@string/pref_key_statsrange"
        android:title="@string/settings_statsrange_title"
        android:summaryOn="@string/settings_statsrange_summary_on"
        android:summaryOff="@string/settings_statsrange_summary_off"
        android:defaultValue="true" />

    <ListPreference
        android:key="@string/pref_key_nightmode"
        android:title="@string/settings_nightmode_title"
        android:entries="@array/settings_nightmode_entries"
        android:entryValues="@array/settings_nightmode_entry_vals"
        android:defaultValue="auto"/>

</PreferenceScreen>
